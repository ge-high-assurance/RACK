{
  "variables": {
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "repository": "interran/rack-box",
    "tags": "latest,{{user `version`}}",
    "version": "v2.0"
  },

  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "pull": false,
      "commit": true,
      "changes": [
        "ENTRYPOINT [ \"/usr/bin/python3\", \"/usr/bin/systemctl\" ]",
        "EXPOSE 80 3030 12050 12051 12052 12053 12054 12055 12056 12057 12058 12059 12060 12062 12064 12065 12066 12068 12091 12092"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "./files",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/install.sh",
        "scripts/clean.sh"
      ],
      "environment_vars": [
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `repository`}}",
        "tags": "{{user `tags`}}"
      }
    ]
  ]
}
